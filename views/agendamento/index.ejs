<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Agendamentos</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 40px; }
    table { border-collapse: collapse; width: 100%; margin-bottom: 30px; }
    th, td { border: 1px solid #ddd; padding: 8px; text-align: left; }
    th { background-color: #f2f2f2; }
    form { margin-top: 20px; }
    input, button { padding: 8px; margin: 4px 0; width: 50%; max-width: 300px; }
  </style>
</head>
<body>

  <h1> R+ </h1>
  <h1>Suas Reservas</h1>

  <table>
    <thead>
      <tr>
        <th>Usuário</th>
        <th>Sala</th>
        <th>Horário</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% if (agendamentos.length > 0) { %>
        <% agendamentos.forEach(a => { %>
          <tr>
            <td><%= a.nome_usuario %></td>
            <td><%= a.nome_sala %></td>
            <td><%= a.tempo %></td>
            <td>
              <form method="POST" action="/seus_agendamentos/<%= a.id %>?_method=DELETE" style="display:inline;">
                <button type="submit">Excluir</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="5">Nenhum agendamento encontrado.</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <form method="GET" action="/selecionar_sala">
    <button type="submit">+</button>
  </form>

</body>
</html>
